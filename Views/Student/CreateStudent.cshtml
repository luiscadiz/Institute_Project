<h1>Insert date</h1>
    <form name="form-alumno" action="@Url.Action("SaveStudent","Student")" method="POST" >
        <div>
            <label for="name">Name</label>
            <input autofocus type="text" id="nombre" name="name" placeholder="Name" required/>
        <div>
            <label for="surname">Surname</label>
            <input placeholder="Surname" type="text" id = "surname" name="surname" required/>
        </div>
        <div>
            <label for="birthdate">Date of Birth</label>
            <input type="date" id = "birthdate" name="birthdate" value="2021-02-05" required/>
        </div>
        <div>
            <label for="enrollment">Enrollment</label>
            <input type="number" id = "enrollment" name="enrollmentnumber" placeholder="12345" required/>
        </div>
        <div>
            <label for="email">Email</label>
            <input type="email" id = "email" name="email" placeholder="example@example.com" required/>
        </div>
        <div>
            <input type="submit" value="Add">
        </div>
        <a disabled href="Alumno.html">Back</a>
    </form>